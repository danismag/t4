<?xml version="1.0" encoding="UTF-8" ?>

<!-- //TODO Заготовка: нуждается в доработке -->

<project name="musiclib" default="build" basedir=".">

    <target name="vars">
        <resolvepath propertyName="project.dir" path="${project.basedir}"/>
        <echo msg="Текущая папка: ${project.dir}" />
        <resolvepath propertyName="target.dir" path=""/>
    </target>

    <target name="copy">
        <copy todir="${target.dir}">
            <fileset dir="${project.basedir}">
                <include name="**"/>
            </fileset>
        </copy>
    </target>

    <target name="composer">
        <exec dir="${target.dir}" command="composer install" checkreturn="true" passthru="true" error="stdout"/>
    </target>


    <target name="build" depends="vars"></target>

</project>